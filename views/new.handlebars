<form action="/new" method="POST" class="mb-4">

<div class="form-group">
<label for="title">Title</label>
<input type="text" name="title" class="form-control">
</div>

<div class="form-group mt-4">
<label for="image">ImageName</label>
<input type="text" name="image" class="form-control">
</div>

<div class="form-group mt-4">
<label for="catagory">catagory</label>
<input type="text" name="catagory" class="form-control">
</div>
<div class="form-floating mt-4">
  <textarea class="form-control" placeholder="Leave a Headline here" id="floatingTextarea1" name="floatingTextarea" style="height: 100px"></textarea>
  <label for="floatingTextarea">HeadLine</label>
</div>
<div class="form-floating mt-4">
  <textarea class="form-control" placeholder="Leave a detail 1 here" id="floatingTextarea1" name="floatingTextarea1" style="height: 100px"></textarea>
  <label for="floatingTextarea1">Details 1</label>
</div>
<div class="form-floating mt-4">
  <textarea class="form-control" placeholder="Leave a detail 2 here" id="floatingTextarea2" name="floatingTextarea2" style="height: 100px"></textarea>
  <label for="floatingTextarea2">Details 2</label>
</div>
<input type="submit" value="Add article" class="btn btn-primary btn-block mt-4">
</form>

<div class="container mt-4">
    <ul class="list-group">
        {{#each result_slider}}
     <li class="list-group-item">{{this._id}}</li>
        {{/each}}
    </ul>
</div>